<h1 class="page-title">My Profile</h1>

<div class="banner-container">
    <%= image_tag "banner.png", style:"width:100%;"%>
      <div class="button button-large button-flex">
          <%= link_to "+ 10'000 points", root_path %>
      </div>
</div>

<div style="text-align: center">
  <div style= "margin: 30px">
    <% if @user.photo.present?%>
      <%= cl_image_tag @user.photo.key, :gravity=>"faces", :crop=>"fill", class: 'avatar-large'%>
    <% else %>
       <%= cl_image_tag 'Group_52_ubhz2j.png', :gravity=>"faces", :crop=>"fill", class: "avatar-large" %>
    <% end %>
  </div>

  <div style="list-style-type:none; font-style:$body-font; font-size: 12px;">
    <p><strong> <%= @user.first_name %> <%= @user.last_name %></strong></p>
    <p><%= @user.user_name %></p>
    <p><%= @user.email %></p>
  </div>
</div>

  <div class="button button-small" style="margin: 20px auto;">
        <%= link_to "Edit", edit_profile_path(@user) %>
  </div>

<div class="container">
  <div class="row">
    <% @users_groups.each do |users_group| %>
      <div class="col-12 col-md-12 col-xl-12 px-2 mb-3">
        <div class="card profile-card">
          <div class="col card-col-img">
            <%= cl_image_tag(users_group.group.challenge.photo.key, class: "card-img") %>
          </div>
          <div class="col card-b">
            <div class="card-body">
              <p class="card-title mb-0"><strong><%= link_to users_group.group.challenge.name, group_path(users_group.group) %></strong></p>
              <p class="card-text"><%= users_group.group.challenge.description %></p>
            </div>
            <div class="row range card-range">
              <div class="col">
              <%= image_tag("difficulty.png", size: "17x14")%>
              <label for="exampleRangeDifficulty">Difficulty</label>
                <div class="slider">
                  <div class="slider-value" style="width:75%; height:5px; color:white;"></div>
                </div>
              </div>
              <div class="col">
              <%= image_tag("world.png", size: "14x14")%>
              <label for="exampleRangeImpact">Impact</label>
                <div class="slider">
                  <div class="slider-value" style="width:50%; height:5px; color:white;"></div>
                </div>
              </div>
          </div>
        </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


<h1 class="page-title" style="border-bottom: 1px solid #5ACCB3; margin: 40px;">Archive</h1>

  <div class="container" style="filter: opacity(50%)">
    <div class="row">
      <% @group_completed.each do |group| %>
        <div class="col-12 col-md-12 col-xl-12 px-2 mb-3">
          <div class="card profile-card">
            <div class="col card-col-img">
              <%= cl_image_tag(group.challenge.photo.key, class: "card-img") %>
            </div>
            <div class="col card-b">
              <div class="card-body">
                <p class="industrycard mb-0"><strong><%= link_to group.challenge.name, group_path(group) %></strong></p>
                <p class="card-text"><%= group.challenge.description %></p>
              </div>
              <div class="row range card-range">
                <div class="col">
                <%= image_tag("difficulty.png", size: "17x14")%>
                <label for="exampleRangeDifficulty">Difficulty</label>
                  <div class="slider">
                    <div class="slider-value" style="width:75%; height:5px; color:white;"></div>
                  </div>
                </div>
                <div class="col">
                <%= image_tag("world.png", size: "14x14")%>
                <label for="exampleRangeImpact">Impact</label>
                  <div class="slider">
                    <div class="slider-value" style="width:50%; height:5px; color:white;"></div>
                  </div>
                </div>
            </div>
          </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>




