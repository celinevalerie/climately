<h1 class="page-title">Challenge Details</h1>
<h2 class="page-subtitle">See below all the details about your challenge</h2>


<div class="banner-container">
    <%= image_tag "banner.png", style:"width:100%;"%>
      <div class="button button-large button-flex">
          <%= link_to "+ 10'000 points", root_path %>
      </div>
</div>

<div style="text-align: center;">
  <%= cl_image_tag( @challenge.photo.key, style: "width: 200px; height: 200px; border-radius: 4px;") %>
</div>

<div style="width:400px; margin: 50px auto; font-size: 15px; text-align: center;">
  <%= @challenge.description %>
</div>

<div class="container-icon">
  <div style="padding: 12px 0px; width:300px; margin: 10px auto;">
    <%= image_tag("difficulty.png", size: "25x25")%>
                <label for="exampleRangeDifficulty" style="font-size: 15px; padding: 0px 0px 5px 10px;">Difficulty</label>
                  <div class="slider">
                    <div class="slider-value" style="width:75%; height:5px; color:white;">.</div>
                  </div>
  </div>
  <div style="padding: 12px 0px; width:300px; margin: 10px auto;">
    <%= image_tag("world.png", size: "25x25")%>
                <label for="exampleRangeDifficulty" style="font-size: 15px; padding: 0px 0px 5px 10px;">Impact</label>
                  <div class="slider">
                    <div class="slider-value" style="width:75%; height:5px; color:white;">.</div>
                  </div>
</div>


  <div class="button button-large" style="margin: 20px auto;">
        <%= link_to 'Add challenge', new_challenge_group_path(@challenge) %>
  </div>

  <div class="button-secondary button-large-secondary" style="margin: 20px auto;">
        <%= link_to "Go back to list", challenges_path %>
  </div>
