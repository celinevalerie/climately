<h1 class="page-title pb-4">Customize Challenge</h1>

<div class="banner-container">
    <%= image_tag "banner.png", style:"width:100%;"%>
      <div class="button button-large button-flex">
          <%= link_to "+ 10'000 points", root_path %>
      </div>
</div>

<div style="text-align: center;">
  <%= cl_image_tag( @challenge.photo.key, style: "width: 200px; height: 200px; border-radius: 4px;") %>
</div>



<div data-controller="slider">
  <div style="width: 80vh; margin: 0px auto;">
    <div style="font-size: 15px; text-align: center; margin: 50px auto;">
    <%= @challenge.description %>
    </div>
    <div style="padding: 12px 0px;">
      <%= image_tag("difficulty.png", size: "25x25")%>
                  <label for="exampleRangeDifficulty" style="font-size: 15px; padding: 0px 0px 5px 10px;">Difficulty</label>
                    <div class="slider">
                      <div data-target="slider.difficulty" class="slider-value" style="width:<%= @challenge.default_difficulty * 10 %>%; height:5px; color:white;">.</div>
                    </div>
    </div>
    <div style="padding: 12px 0px;">
      <%= image_tag("world.png", size: "25x25")%>
                  <label for="exampleRangeDifficulty" style="font-size: 15px; padding: 0px 0px 5px 10px;">Impact</label>
                    <div class="slider">
                      <div data-target="slider.impact" class="slider-value" style="width:<%= @challenge.default_impact * 10 %>%; height:5px; color:white;">.</div>
                    </div>
    </div>
  </div>


  <div class="container-slider">
    <%= simple_form_for([@challenge, @group], remote: true) do |f| %>
    <div style="padding: 12px 0px;">
      <%= image_tag("duration.png", size: "25x25")%>
      <label style="font-size: 15px; padding: 0px 0px 5px 10px;">How many weeks do you want to do the challenge?</label>
    </div>
    <div>
      <%= f.input :duration, as: :range, input_html: { step: 1, min: 1, max: 10, class:"custom-range", style:"border: white;", data: { action: "click->slider#calculateImpact", id: @challenge.id, target: "slider.duration" }}, label: false %>
    </div>
    <div style="padding: 12px 0px;">
      <%= image_tag("hurdles.png", size: "25x25")%>
      <label style="font-size: 15px; padding: 0px 0px 5px 10px;">How many exceptions a week are allowed?</label>
    </div>
    <div>
      <%= f.input :exceptions, as: :range, input_html: { step: 1, min: 0, max: 7, class:"custom-range", style:"border: white;", data: { action: "click->slider#calculateDifficulty", id: @challenge.id, target: "slider.exceptions" }}, label: false, min: 0, max: 7  %>
    </div>
      <div class="button button-large" style="margin: 1px auto;">
        <%= f.button :submit, input_html: { stlye:"color:white;" } %>
      </div>
    <% end %>
  </div>
</div>
