<h1 class="page-title pb-4"><%= @challenge.name %></h1>
<h2 class="page-subtitle">Add your friends to this challenge</h2>

<div style="text-align: center; margin: 20px;">
  <%= image_tag "signup2.png", style: "width: 200px; " %>
</div>

<div style="text-align: center; margin: 20px; ">
  <%= cl_image_tag( @challenge.photo.key, style: "width: 200px; height: 200px; border-radius: 4px;") %>
</div>

<% @friends.each do |friend| %>
<div class="col-12 px-2 mb-5">
  <div class="card">
        <div class="card-col-pic d-flex">
          <% if friend.photo.present? %>
            <%= cl_image_tag(friend.photo.key, class: "friendavatar") %>
          <% end %>
        </div>

        <div class="card-b">
          <div class="card-body-friends">
            <p class="industrycard mb-0"><strong><%= friend.first_name %> <%= friend.last_name %></strong>
            <p class="card-text"><%= friend.user_name %></p>
          </div>
        </div>
        <div class="button button-small mr-4 d-flex flex-column align-items-left">
          <%= link_to 'Invite', group_user_groups_path(@group, {:friend_id => friend.id}), method: :post %>
        </div>
  </div>
</div>
<% end %>
