<h1 class="page-title">Friends</h1>
<p class="centered">Invite or find friends and save the world together</p>

  <div class="button button-large mr-auto ml-auto mb-4">
    <%= link_to 'Invite Friends', new_user_invitation_path %>
  </div>

<p class="centered">Your Friends:</p>
<div class="container">
  
    <% @friends.each do |friend| %>
      <div class="col-12 px-2 mb-5">
        <div class="card">
              <div class="card-col-pic d-flex">
                <% if friend.photo.present? %>
                  <%= cl_image_tag(friend.photo.key, class: "friendavatar") %>
                <% end %>
              </div>

              <div class="card-b">
                <div class="card-body-friends">
                  <p class="industrycard mb-0"><strong><%= friend.first_name %> <%= friend.last_name %></strong> 
                  <p class="card-text"><%= friend.user_name %></p>
                </div>
              </div>
              <%# <div class="points mr-4 d-flex flex-column align-items-left"> %>
                <div class="points"><%= friend.points %> Points</div>
              <%# </div> %>
        </div>
      </div>
    <% end %>
</div>  

<div class="container"> 
  <div class="miniform">
    <p class="centered">Find people you know:</p>

    <%= form_tag profile_friendships_path(@user), method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a user"
      %>
      <%= submit_tag "Search", class: "button button-small mt-4 mb-4 mr-auto ml-auto" %>
    <% end %>
  </div>
</div>

<div class="container">

    <% @nonfriends.each do |friend| %>
      <div class="col-12 px-2 mb-5">
        <div class="card">
          <div class="card-col-pic d-flex">
          <% if friend.photo.present? %>
            <%= cl_image_tag(friend.photo.key, class: "friendavatar") %>
          <% end %>
          </div>

          <div class="col d-flex justify-content-between align-items-center">
            <div class="card-b">
              <div class="card-body-friends">
                <p class="industrycard mb-0"><strong><%= friend.first_name %> <%= friend.last_name %></strong> 
                <p class="card-text"><%= friend.user_name %></p>
              </div>
            </div>

              <div class="button-container">
                <% if current_user.friends.include?(friend)%>
                <div class="button-large-secondary mt-auto mr-3">
                  You are friends already
                </div>
                <% else %>
                <%= link_to(profile_friendships_path(:friend_id => friend.id), method: :post, remote: true) do %>
                    <div class="checkbox ml-auto mr-auto mb-3">
                        <i class="fas fa-plus"></i>
                    </div>
                <% end %>
                <% end %>
              </div>
          </div>
        </div>
      </div>
    <% end %>

</div>
